import axios from "axios";

export function getStaticPaths() {
  return new Promise((resolve) => {
    axios
      .get("https://lasapip.com/api/newsletter/getNewsletterPaths")
      .then((res) => {
        resolve(
          res.data["newsletterPaths"].map((path: string) => {
            return {
              params: {
                slug: path,
              },
            };
          })
        );
      })
      .catch((err) => {
        console.log(err);
        resolve([]);
      });
  });
}
