---
import { marked } from "marked";

export interface ParagraphData {
    header: string;
    body: string;   
}
const { header, body } = Astro.props;
const parsed = marked.parse(body);
---
<div class="text-mono-a max-w-sm flex flex-col gap-4">
    <h3 class="font-title text-lg">{header}</h3>
    <div class="font-sans body">
        <slot set:html={parsed} />
    </div>
</div>

<style is:global>
        #paragraphs .body > p {
            @apply bg-clip-text from-gradient-purple-from to-gradient-purple-to via-gradient-purple-via bg-gradient-to-br text-mono-b;
        }
        #paragraphs .body > p strong {
            @apply text-transparent font-bold tracking-tighter;
        }
</style>