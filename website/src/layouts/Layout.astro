---
import "@fontsource/karla/400.css";
import "@fontsource/karla/500.css";
import "@fontsource/chivo/900.css";
import "@fontsource/poppins/600.css";

export interface Props {
  title: string;
  light?: boolean;
  og?: {
    title: string;
    description: string;
    url: string;
    image: string;

  }
}

const { title, light, og } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=4&from=lasapip" />
    <meta name="generator" content={Astro.generator} />
    
    { og && <meta name="og:title" content={og.title} /> }
    { og && <meta name="og:type" content="website" /> }
    { og && <meta name="og:description" content={og.description} /> }
    { og && <meta name="og:url" content={og.url} /> }
    { og && <meta name="og:image" content={og.image} /> }
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        /* font-family: system-ui, sans-serif; */
        scroll-behavior: smooth;
        @apply font-sans;
      }
    </style>
    { !light && <style is:global>
      html {
        background: #000;
      }
    </style> }
     { light && <style is:global>
      html {
        background: #fff;
      }
    </style> }
  </body>
</html>
